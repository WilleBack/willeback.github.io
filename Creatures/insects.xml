      <category>
         <category-name>Standard Actions</category-name>

         <block>
            <name>Claw</name> <type>mbasic</type>
            <frequency>At-Will</frequency>
            <line><![CDATA[<i>Attack:</i>]]> Melee 1 (one creature); +7 vs. AC</line>
            <line><![CDATA[<i>Hit:</i>]]> 1d8 + 5 damage.</line>
         </block>

