<catalog>
   <power>
      <title>Angelic Alacrity</title>
      <class>Avenger</class> <category>Attack</category> <level>1</level>
      <fluff>You focus divine energy through your body to gain uncanny speed as you make your attack</fluff>
      <part>
         <frequency>Encounter</frequency>
         <keyword>Divine, Weapon</keyword>
         <action>Standard</action> <subaction>Action</subaction>
         <type>Melee</type> <range>weapon</range>
         <section>
            <shade>true</shade>
            <name>Effect:</name> <name-style>bold</name-style>
            <text>You can shift up to 3 squares.</text>
         </section>
         <section>
            <shade>true</shade> <indent>1</indent>
            <name>Censure of Pursuit:</name> <name-style>bold</name-style>
            <text>Shift a number of squares equal to 2 + your Dexterity modifier.</text>
         </section>
         <section>
            <name>Target:</name> <name-style>bold</name-style>
            <text>One creature</text>
         </section>
         <section>
            <name>Attack:</name> <name-style>bold</name-style>
            <text>Wisdom vs. AC</text>
         </section>
         <section>
            <shade>true</shade>
            <name>Hit:</name> <name-style>bold</name-style>
            <text>2[W] + Wisdom modifier damage.</text>
         </section>
         <section>
            <name>Miss:</name> <name-style>bold</name-style>
            <text>If you started more than 2 squares away from the enemy, you deal damage equal to your Wisdom modifier + your weapon's enhancement bonus.</text>
         </section>
      </part>
   </power>

