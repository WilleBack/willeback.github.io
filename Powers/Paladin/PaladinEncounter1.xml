<catalog>

   <power>
      <title>Dazzling Flare</title>
      <class>Paladin</class> <category>Attack</category> <level>1</level>
      <fluff>Painfully bright light flashes from your holy symbol</fluff>
      <part>
         <frequency>Encounter</frequency>
         <keyword>Divine, Implement, Radiant</keyword>
         <action>Standard</action> <subaction>Action</subaction>
         <type>Ranged</type> <range>5/10</range>
         <section>
            <name>Target:</name> <name-style>bold</name-style>
            <text>One creature</text>
         </section>
         <section>
            <name>Attack:</name> <name-style>bold</name-style>
            <text>Charisma vs. Reflex</text>
         </section>
         <section>
            <shade>true</shade>
            <name>Hit:</name> <name-style>bold</name-style>
            <text>2d8 + Charisma modifier radiant damage, and the target takes a penalty to attack rolls until the end of your next turn. The penalty equals 1 + one-half your Wisdom modifier (minimum -2 penalty).</text>
         </section>
         <section>
            <name>Miss:</name> <name-style>bold</name-style>
            <text>One-half the penalty to attack rolls.</text>
         </section>
      </part>
   </power>
   
