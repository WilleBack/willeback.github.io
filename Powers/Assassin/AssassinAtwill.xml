<catalog>
   <power>
      <title>Executioner's Noose</title>
      <class>Assassin</class> <category>Attack</category> <level>1</level>
      <fluff>You gather shadows in the form of a noose, cast it around your foe's neck, and pull</fluff>
      <part>
         <frequency>At-Will</frequency>
         <keyword>Force, Implement, Shadow</keyword>
         <action>Standard</action> <subaction>Action</subaction>
         <type>Ranged</type> <range>5/10</range>
         <section>
            <name>Target:</name> <name-style>bold</name-style>
            <text>One creature</text>
         </section>
         <section>
            <name>Attack:</name> <name-style>bold</name-style>
            <text>Dexterity vs. Fortitude</text>
         </section>
         <section>
            <shade>true</shade>
            <name>Hit:</name> <name-style>bold</name-style>
            <text>1d6 + Dexterity modifier force damage, and you pull the target 2 squares.</text>
         </section>
         <section>
            <shade>true</shade> <indent>1</indent>
            <name>Critical:</name> <name-style>bold</name-style>
            <text>The target must succeed on a saving throw or you knock it prone.</text>
         </section>
         <section>
            <shade>true</shade>
            <text>The target is slowed until the end of your next turn.</text>
         </section>
         <section>
            <shade>true</shade> <indent>1</indent>
            <name>Level 21:</name> <name-style>italic</name-style>
            <text>2d6 + Dexterity modifier force damage, and you pull the target 3 squares.</text>
         </section>
         <section>
            <name>Miss:</name> <name-style>bold</name-style>
            <text>You pull the target 1 square.</text>
         </section>
      </part>
   </power>
   
