<catalog>
	<collection>Bard lvl 1 At-Will Attack Spells</collection>

   <power>
      <title>Cutting Words</title>
      <class>Bard</class> <category>Attack</category> <level>1</level>
      <fluff>With the aid of your magic, your words become a weapon capable of luring a foe into a tactical blunder</fluff>
      <part>
         <frequency>At-Will</frequency>
         <keyword>Arcane, Implement, Psychic</keyword>
         <action>Standard</action> <subaction>Action</subaction>
         <type>Ranged</type> <range>10</range>
         <section>
            <name>Target:</name> <name-style>bold</name-style>
            <text>One creature</text>
         </section>
         <section>
            <name>Attack:</name> <name-style>bold</name-style>
            <text>Charisma vs. Will</text>
         </section>
         <section>
            <shade>true</shade>
            <name>Hit:</name> <name-style>bold</name-style>
            <text>1d8 + Charisma modifier psychic damage, and you pull the target 2 squares.</text>
         </section>
         <section>
            <shade>true</shade> <indent>1</indent>
            <name>Level 21:</name> <name-style>italic</name-style>
            <text>2d8 + Charisma modifier psyhic damage, and pull 3 squares.</text>
         </section>
         <section>
            <name>Miss:</name> <name-style>bold</name-style>
            <text>You pull the target 1 square.</text>
         </section>
      </part>
   </power>

